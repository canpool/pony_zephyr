/dts-v1/;
#include <st/f4/stm32f429Xi.dtsi>
#include <st/f4/stm32f429i(e-g)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "STM32F429IG fire tiaozhanzhe V1 board";
	compatible = "st,stm32f429";

	aliases {
		led0 = &blue_led;
		sw0 = &user_button1;
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		blue_led: led_4 {
			gpios = <&gpiod 12 GPIO_ACTIVE_LOW>;
		};
		rgb_r_led: led_r {
			gpios = <&gpioh 10 GPIO_ACTIVE_LOW>;
			status = "disabled";
		};
		rgb_g_led: led_g {
			gpios = <&gpioh 11 GPIO_ACTIVE_LOW>;
			status = "disabled";
		};
		rgb_b_led: led_b {
			gpios = <&gpioh 12 GPIO_ACTIVE_LOW>;
			status = "disabled";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button1: button1 {
			gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_0>;
		};
		user_button2: button2 {
			gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_1>;
			status = "disabled";
		};
	};
};

&clk_lsi {
	status = "okay";
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(25)>;
	status = "okay";
};

&pll {
	div-m = <15>;
	mul-n = <216>;
	div-p = <2>;
	div-q = <8>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(180)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <4>;
	apb2-prescaler = <2>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};
